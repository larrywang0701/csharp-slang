{
  "compilerOptions": {
    "outDir": "./build/csinterp",
    "module": "commonjs",
    "declaration": true,
    "target": "es2016",
    "lib": [
      "es2021.string",
      "es2018",
      "es2017.object",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "incremental": true,
  },
  "exclude": [
    "./src/**/__tests__",
    "./src/**/__tests__util",
    "./build",
  ]
}